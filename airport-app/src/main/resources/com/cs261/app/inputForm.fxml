<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="1000.0" prefWidth="1000.0" style="-fx-background-color: #A6BEDA;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs261.app.NewSim">
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="540.0" prefWidth="600.0" StackPane.alignment="CENTER">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #4b4846; -fx-border-width: 10; -fx-padding: 10; -fx-effect: dropshadow(gaussian, #4B4846, 15, 0, 0, 5);">
               <content>
                  <VBox fx:id="runwayBox" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox prefHeight="20.0" prefWidth="200.0">
                           <children>
                              <Label text="What is the Desired length of the Simulation?">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <TextField promptText="Days">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                              <Label text=":">
                                 <font>
                                    <Font size="30.0" />
                                 </font>
                              </Label>
                              <TextField promptText="Hours">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                              <Label text=":">
                                 <font>
                                    <Font size="30.0" />
                                 </font>
                              </Label>
                              <TextField promptText="Minutes">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox prefHeight="20.0" prefWidth="200.0">
                           <children>
                              <Label text="Runways:">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox prefHeight="20.0" prefWidth="200.0">
                           <children>
                              <Label text="Current number of runways">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <VBox prefHeight="100.0" prefWidth="100.0">
                           <children>
                              <Label text="Runway 1">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <HBox prefHeight="20.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Runway Length (Metres)">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets left="40.0" right="20.0" />
                                       </HBox.margin>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox prefHeight="20.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Bearing (Degrees)">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets left="40.0" right="20.0" />
                                       </HBox.margin>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox prefHeight="20.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Operating mode: ">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="modeBox" prefWidth="150.0" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="20.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Operational Status:">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="statusBox" prefWidth="150.0" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#addSection" text="Add Runway" />
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#removeSection" text="Remove This runway" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            <HBox alignment="BOTTOM_LEFT" prefHeight="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="65.0" text="Back" />
                  <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" text="Example error message" textFill="RED" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="65.0" text="Start" />
               </children></HBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
